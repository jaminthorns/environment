[main]
less_chatty = True
multi_line = True
keyword_casing = upper
table_format = psql_unicode
prompt = '\x1b[30m\x1b[40m \x1b[34m\h \x1b[90m╱ \x1b[36m\d \x1b[0;30m\n\x1b[32m▶ '
prompt_continuation = '~'
pager = 'less --header=3 --jump-target=4'

[colors]
completion-menu.completion.current = 'ansiblack bg:ansigray'
completion-menu.completion = 'ansiwhite bg:ansiblue'
completion-menu.meta.completion.current = 'ansiblack bg:ansiwhite'
completion-menu.meta.completion = 'ansiwhite bg:ansibrightblue'
scrollbar = ''
bottom-toolbar = 'ansigray'
bottom-toolbar.off = ''
bottom-toolbar.on = 'ansiwhite bold'
bottom-toolbar.transaction.valid = 'ansigreen bold'
bottom-toolbar.transaction.failed = 'ansired bold'
output.header = 'ansiblue bold'
output.null = 'ansibrightblack'

# Syntax Highlighting
Token.Comment = 'ansibrightblack'
Token.Keyword = 'ansimagenta'
Token.Name = 'ansigray'
Token.Name.Builtin = 'ansicyan italic'
Token.Name.Function = 'ansicyan'
Token.Number = 'ansiblue'
Token.Operator = 'ansimagenta'
Token.Punctuation = 'ansigray'
Token.String = 'ansiyellow'
Token.String.Escape = 'ansimagenta'
Token.Text = 'ansigray'
