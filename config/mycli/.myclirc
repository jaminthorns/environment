[main]
less_chatty = True
multi_line = True
keyword_casing = upper
table_format = double
prompt = '\x1b[30m\x1b[1m\x1b[40m \x1b[34m\h \x1b[36m\d \x1b[0m\x1b[30m\n\x1b[32m ▶ '
prompt_continuation = ' '

[colors]
completion-menu.completion.current = 'ansiblack bg:ansigray'
completion-menu.completion = 'ansiwhite bg:ansiblue'
completion-menu.meta.completion.current = 'ansiblack bg:ansiwhite'
completion-menu.meta.completion = 'ansiwhite bg:ansibrightblue'
scrollbar = ''
bottom-toolbar = 'ansigray'
bottom-toolbar.off = ''
bottom-toolbar.on = 'ansiwhite bold'
bottom-toolbar.transaction.valid = 'ansigreen bold'
bottom-toolbar.transaction.failed = 'ansired bold'
output.header = 'ansiblue bold'
output.null = 'ansibrightblack'

# Syntax Highlighting
sql.comment = 'ansibrightblack'
sql.constant = 'ansiblue'
sql.datatype = 'ansicyan italic'
sql.escape = 'ansimagenta'
sql.function = 'ansigreen'
sql.keyword = 'ansimagenta'
sql.number = 'ansiblue'
sql.operator = 'ansimagenta'
sql.punctuation = 'ansigray'
sql.string = 'ansiyellow'
sql.string.escape = 'ansimagenta'
sql.variable = 'ansiwhite'
