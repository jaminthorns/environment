{
  "editor.fontSize": 12,
  "editor.renderWhitespace": "boundary",
  "editor.tabSize": 2,
  "editor.renderLineHighlight": "all",
  "editor.cursorBlinking": "phase",
  "editor.rulers": [80],
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontLigatures": true,
  "editor.dragAndDrop": false,
  "editor.minimap.enabled": false,
  "editor.stickyTabStops": true,
  "editor.stickyScroll.enabled": true,
  "editor.smoothScrolling": true,
  "editor.find.seedSearchStringFromSelection": "selection",
  "editor.inlayHints.enabled": "off",

  "workbench.editor.enablePreview": false,
  "workbench.editor.showTabs": "single",
  "workbench.colorTheme": "Dracula",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.settings.editor": "json",
  "workbench.editor.empty.hint": "hidden",
  "workbench.layoutControl.enabled": false,

  "breadcrumbs.enabled": false,

  "security.workspace.trust.banner": "never",

  "diffEditor.renderSideBySide": false,
  "diffEditor.renderIndicators": false,

  "scm.diffDecorationsIgnoreTrimWhitespace": "inherit",

  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  "window.title": "${rootName}${separator}${appName}",

  "search.useGlobalIgnoreFiles": true,
  "search.mode": "newEditor",

  "debug.toolBarLocation": "commandCenter",

  "extensions.ignoreRecommendations": true,

  "terminal.integrated.fontSize": 12,
  "terminal.integrated.rightClickBehavior": "default",
  "terminal.integrated.tabs.hideCondition": "singleGroup",
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.minimumContrastRatio": 1,
  "terminal.integrated.shellIntegration.enabled": false,

  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.autofetch": true,

  "errorLens.removeLinebreaks": false,
  "errorLens.messageBackgroundMode": "message",
  "errorLens.padding": "1px 1ch",

  "gitterm.gitCommands.folderHistory": "git history -s '-m' ${commit} -p '${folder}'",
  "gitterm.gitCommands.fileHistory": "git history -s '-m' ${commit} -f '${filename}'",
  "gitterm.gitCommands.commitHistory": "git history -s '-m' ${commit}",
  "gitterm.gitCommands.showCommit": "git view -m ${commit}",

  "githubPullRequests.pullBranch": "never",

  "projectManager.sortList": "Recent",

  "rest-client.previewResponsePanelTakeFocus": false,
  "rest-client.requestNameAsResponseTabTitle": true,

  "elixirLS.dialyzerEnabled": false,

  "[javascript][javascriptreact][typescript][typescriptreact][json][jsonc][markdown][html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[elixir]": {
    "editor.rulers": [80, 98],
    "editor.wordSeparators": "`~@#$%^&*()-=+[{]}\\|;:'\",.<>/"
  }
}
