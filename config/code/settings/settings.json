{
  "editor.fontSize": 12,
  "editor.renderWhitespace": "boundary",
  "editor.tabSize": 2,
  "editor.renderLineHighlight": "all",
  "editor.cursorBlinking": "phase",
  "editor.rulers": [80],
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontLigatures": true,
  "editor.dragAndDrop": false,
  "editor.minimap.enabled": false,
  "editor.stickyTabStops": true,
  "editor.stickyScroll.enabled": true,
  "editor.smoothScrolling": true,
  "editor.find.seedSearchStringFromSelection": "selection",
  "editor.inlayHints.enabled": "off",

  "workbench.editor.enablePreview": false,
  "workbench.editor.showTabs": false,
  "workbench.colorTheme": "Dracula",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.settings.editor": "json",
  "workbench.editor.untitled.hint": "hidden",

  "diffEditor.renderSideBySide": false,
  "diffEditor.renderIndicators": false,

  "scm.diffDecorationsIgnoreTrimWhitespace": "inherit",

  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  "window.title": "${rootName}${separator}${appName}",

  "search.useGlobalIgnoreFiles": true,

  "extensions.ignoreRecommendations": true,

  "terminal.integrated.fontSize": 12,
  "terminal.integrated.rightClickBehavior": "default",
  "terminal.integrated.tabs.hideCondition": "singleGroup",
  "terminal.integrated.showLinkHover": false,
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.minimumContrastRatio": 1,

  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.autofetch": true,

  "errorLens.padding": "2px 1ch",
  "errorLens.messageBackgroundMode": "message",

  "gitlens.keymap": "none",
  "gitlens.codeLens.enabled": false,
  "gitlens.statusBar.enabled": false,
  "gitlens.graph.statusBar.enabled": false,
  "gitlens.plusFeatures.enabled": false,

  "githubPullRequests.pullBranch": "never",

  "projectManager.sortList": "Recent",

  "rest-client.previewResponsePanelTakeFocus": false,
  "rest-client.requestNameAsResponseTabTitle": true,

  "elixirLS.dialyzerEnabled": false,

  "[javascript][javascriptreact][typescript][typescriptreact][json][jsonc][markdown][html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[elixir]": {
    "editor.rulers": [80, 98],
    "editor.wordSeparators": "`~@#$%^&*()-=+[{]}\\|;:'\",.<>/"
  }
}
